{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,      // Required for project references
    "skipLibCheck": true,
    "types": ["node"],
    "outDir": "./dist-node", // Add an output directory
    "rootDir": "../"        // Set rootDir to project root to include both app and server
  },
  "include": [
    "vite.config.*",
    "src",
    "../server/**/*",
    "scripts/**/*"
  ]
}
