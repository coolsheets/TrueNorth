# Ensure consistent LF line endings
* text=auto eol=lf

# Treat source files as text
*.js   text
*.jsx  text
*.ts   text
*.tsx  text
*.json text
*.css  text
*.scss text
*.html text
*.md   text
*.yml  text
*.yaml text
*.cjs  text

# Keep Windows batch files with CRLF
*.bat  text eol=crlf
*.cmd  text eol=crlf

# Binary files (never diff)
*.png  binary
*.jpg  binary
*.jpeg binary
*.gif  binary
*.ico  binary
*.pdf  binary
*.zip  binary
*.gz   binary
*.woff binary
*.woff2 binary
*.ttf  binary
*.eot  binary
*.mp4  binary
*.mov  binary

# Lock files (optional: normalize or ignore diffs)
package-lock.json merge=union
yarn.lock merge=union
pnpm-lock.yaml merge=union
