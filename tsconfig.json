{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node16",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": true,
    "composite": true
  },
  "files": [],
  "references": [
    { "path": "./app" },
    { "path": "./server" }
  ],
  "include": ["shared/**/*"],
  "exclude": ["node_modules", "dist"]
}
