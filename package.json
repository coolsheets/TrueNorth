{
	"name": "true-north",
	"type": "module",
	"private": true,
	"workspaces": [
		"app",
		"server"
	],
	"husky": {
		"hooks": {
			"pre-commit": "npm run validate && lint-staged"
		}
	},
	"lint-staged": {
		"package.json": [
			"npm run validate:package"
		],
		"app/src/features/inspection/pages/Vehicle.tsx": [
			"npm run validate:vin-search"
		],
		"app/src/utils/vin.ts": [
			"npm run validate:vin-search"
		],
		"*.{ts,tsx,js}": [
			"eslint --fix"
		]
	},
	"scripts": {
		"bootstrap": "npm --prefix app i && npm --prefix server i",
		"setup": "./scripts/setup-dependencies.sh",
		"setup:fix": "./scripts/setup-dependencies.sh --fix",
		"dev": "concurrently \"npm:dev:server\" \"npm:dev:app\"",
		"dev:app": "npm --prefix app run dev",
		"dev:server": "npm --prefix server run dev",
		"dev:app:secure": "cd app && HTTPS=true vite --host",
		"dev:server:secure": "cd server && ts-node-dev --respawn src/index.ts",
		"dev:mobile": "node scripts/start-secure.cjs",
		"validate:package": "node ./scripts/validate-package.js",
		"validate:vin-search": "node ./scripts/validate-vin-search.js",
		"validate": "npm run validate:package && npm run validate:vin-search",
		"build": "npm --prefix app run build && npm --prefix server run build",
		"preview": "npm --prefix app run preview",
		"lint": "eslint .",
		"test": "npm --prefix app run test",
		"e2e": "playwright test",
		"install:deps": "npm install concurrently --save-dev",
		"install:all": "npm install && npm --prefix app install && npm --prefix server install",
		"install:safe": "npm install && npm audit fix && npm --prefix app install && npm --prefix app audit fix && npm --prefix server install && npm --prefix server audit fix"
	},
	"devDependencies": {
		"@types/node": "^20.11.30",
		"@typescript-eslint/eslint-plugin": "^8.44.0",
		"@typescript-eslint/parser": "^8.44.0",
		"autoprefixer": "^10.4.21",
		"concurrently": "^8.2.2",
		"eslint": "^9.35.0",
		"eslint-plugin-react": "^7.37.5",
		"eslint-plugin-react-hooks": "^5.2.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.5",
		"playwright": "^1.47.0",
		"postcss": "^8.5.6",
		"prettier": "^3.3.3",
		"tailwindcss": "^3.4.7",
		"typescript": "^5.0.0"
	},
	"overrides": {
		"esbuild": "^0.25.9"
	}
}
